{
  "version": 2,
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "APP_URL": "https://security-access.vercel.app",
    "ASSET_URL": "https://security-access.vercel.app",
    "APP_CONFIG_CACHE": "/tmp/config.php",
    "APP_ROUTES_CACHE": "/tmp/routes.php",
    "APP_EVENTS_CACHE": "/tmp/events.php",
    "VIEW_COMPILED_PATH": "/tmp/storage/framework/views",
    "CACHE_DRIVER": "array",
    "SESSION_DRIVER": "cookie",
    "QUEUE_CONNECTION": "sync",
    "LOG_CHANNEL": "stderr"
  },
  "builds": [
    {
      "src": "api/index.php",
      "use": "vercel-php@0.7.1",
      "config": {
        "includeFiles": [
          "**"
        ],
        "excludeFiles": [
          "tests/**",
          "storage/logs/**",
          "storage/framework/cache/**",
          "storage/framework/sessions/**",
          "storage/framework/views/**"
        ]
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "public/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/build/(.*)",
      "dest": "/public/build/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "/public/images/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ]
}